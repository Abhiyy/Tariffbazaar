
@{
    var alerts = TempData.ContainsKey(DA.AppBanwao.TariffBazaar.Helpers.MessageHelper.TempDataKey)
                ? (List<DA.AppBanwao.TariffBazaar.Helpers.MessageHelper>)TempData[DA.AppBanwao.TariffBazaar.Helpers.MessageHelper.TempDataKey]
                : new List<DA.AppBanwao.TariffBazaar.Helpers.MessageHelper>();

    if (alerts.Any())
    {
        <hr/>
    }
    
    foreach (var alert in alerts)
    {
        var dismissableClass = alert.Dismissable ? "alert-dismissable" : null;
        <div class="alert alert-@alert.AlertStyle @dismissableClass">
            @if (alert.Dismissable)
            {
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            }
            @Html.Raw(alert.Message)
        </div>
    }
}

