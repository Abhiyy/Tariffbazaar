@model IEnumerable<DA.AppBanwao.TariffBazaar.ViewModels.UserDetailsModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>

<h2>Users</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="grid">
            @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.EmailAddress).Titled("EmailAddress").Filterable(true).Sortable(true);
                        columns.Add(c => c.Usern).Titled("Name").Filterable(true).Sortable(true);
                        columns.Add(c => c.Phone).Titled("Phone");
                        columns.Add(c => c.Role).Titled("User Type");
                        
                        columns.Add(c => c.Active).Titled("Active");
                        
                        columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<a href="@Url.Action("Details", "RentItem", new { id = o.UserId })" class="btn btn-default btn-xs"> Details <i class="fa fa-search-plus"></i> </a>);
                        columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .SetWidth(30)
                .RenderValueAs(o => @<a href="@Url.Action("Edit", "RentItem", new { id = o.UserId })" class="btn btn-primary btn-xs"> Edit <i class="fa fa-pencil-square-o"></i> </a>);
                    }).WithPaging(10).Sortable(true)
        </div>
    </div>
</div>
<div class="row">
    
    <div class="col-xs-12">
        <hr />
        <a href="@Url.Action("Create","Account")" class="btn btn-default" >Create <i class="fa fa-plus" ></i></a>
    </div>
</div>





