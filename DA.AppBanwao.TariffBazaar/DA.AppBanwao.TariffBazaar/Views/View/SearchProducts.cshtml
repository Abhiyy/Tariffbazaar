@{
    ViewBag.Title = "Tariff Bazaar | Items for by you";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@model List<DA.AppBanwao.TariffBazaar.ViewModels.RentItemDetailsModel>
<ul class="breadcrumb">
  <li><a href="@Url.Action("Index","Home")">Home</a></li>
  <li class="active">Product you are looking for</li>
</ul>
<h2>@if(Model.Count()>0){<text> Products on rent</text>}else{<text> No results found.</text>}</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model)
        { 
        <text>
        <div class="col-md-4 ProductinList">
            
                <div>
                    <img src="@Url.Content(item.ImageLink1)" alt="productImage" class="thumbnail productImageHome" />
                </div>
                <div class="description">
                    <h5>@item.Name</h5>
                    <i class="fa fa-inr"></i> @item.Rent per @item.RentCriteriaName  - <span class="text-success">Available!!</span>
                    <h6></h6>
                    <a href="@Url.Action("Product","View",new {id=item.RentItemId})" class="btn-sm btn-primary" > View Details <i class="fa fa-search-plus"></i> </a>
                </div>
            <br />
         </div>
        </text>
        }

    </div>
</div>