@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@model IEnumerable<DA.AppBanwao.TariffBazaar.Models.Slider>
@using GridMvc.Html
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>

<div class="row">
    <div class="col-xs-12">
     <h2> Slider </h2>
        <div class="row">
            <div class="col-xs-12">
                <div class="grid">
                    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.SliderID).Titled("ID").Filterable(true);
                        columns.Add(c => c.OfferHeading).Titled("Title").Filterable(true);


                        columns.Add(c => c.SlideOrder).Titled("Order");

                        columns.Add(c => c.Active).Titled("Ad Approved");
                        columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => @<a href="@Url.Action("Details", "Slider", new { id = o.SliderID })" class="btn btn-default btn-xs"> Details <i class="fa fa-search-plus"></i> </a>);
                        columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .SetWidth(30)
                .RenderValueAs(o => @<a href="@Url.Action("Edit", "Slider", new { id = o.SliderID })" class="btn btn-primary btn-xs"> Edit <i class="fa fa-pencil-square-o"></i> </a>);
                    }).WithPaging(10).Sortable(true)
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-xs-5">
                <a href="@Url.Action("Create","Slider")" class="btn btn-default" >Create <i class="fa fa-plus"></i> </a>
            </div>
        </div>
        </div>
</div>