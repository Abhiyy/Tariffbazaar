@{
    ViewBag.Title = "Tariff Bazaar | Sign in";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@model DA.AppBanwao.TariffBazaar.ViewModels.LoginModel

<div class="row">
    <div class="col-xs-6 col-xs-offset-3" style="border-right:1px dotted #f8f8f8;margin-top:10%">

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Sign In</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "example@tariffbazaar.com" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "123456" })
                            <div class="checkbox">
                                <a href="@Url.Action("Register","Account")">Do not have account? Click Here</a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">

                            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Sign In</button>
                            <button type="reset" class="btn btn-default"><i class="fa fa-times-circle"></i> Clear</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
    <div class="col-xs-6">


        </div>

    </div>

<script>
    $(document).ready(function () {
        $('form').addClass("form-horizontal");
    });
</script>